<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_circular"/>
            <solid android:color="@color/custom_dialog_multiple_single_choice_pressed"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_circular"/>
            <solid android:color="@color/custom_dialog_multiple_single_choice_pressed"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/custom_dialog_multiple_single_choice_unpressed_border"/>
            <corners android:radius="@dimen/corner_radius_circular"/>
            <solid android:color="@color/custom_dialog_multiple_single_choice_unpressed"/>
        </shape>
    </item>
</selector>